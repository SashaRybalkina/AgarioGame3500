<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TowradsAgarioStepOne.MainPage">

     <StackLayout>

         <GraphicsView 
                x:Name="PlaySurface"
                VerticalOptions="Center"
                BackgroundColor="Blue"
                HeightRequest="800"
                WidthRequest="800" />
        <Label x:Name="circleCenterLabel" Text="{Binding CircleCenter}" />
        <Label x:Name="directionLabel" Text="{Binding Direction}" />

    </StackLayout>

</ContentPage>

